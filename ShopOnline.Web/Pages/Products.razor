@page "/"
@inherits ProductsBase

@if (Products == null)
{
    <h3>Loading products...</h3>
} else
{
    <h3 class="mb-5">Products</h3>

    var productCount = Products.Count();
    @if (productCount > 0)
    {
        @foreach (var prodGrup in LoadGroupedProductsByCategory())
        {
            string categoryName = GetCategoryName(prodGrup);
            int productLimit = 4;
            <h4>@categoryName</h4>
            <div class="row mt-3">
                <DisplayProducts Products="@prodGrup.Take(productLimit)" />
            </div>
            <hr class="mb-3" />
        }
    }
}
